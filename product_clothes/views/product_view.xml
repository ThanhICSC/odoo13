<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_form_view_inherit_clothes" model="ir.ui.view">
        <field name="name">product.template.common.form.season</field>

        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml"> 
            <xpath expr="//field[@name='type']" position="after">

<field name="season" />

            </xpath> 
        </field>
    </record>


  <record id="product_product_form_view_inherit_clothes" model="ir.ui.view">
        <field name="name">product.product.common.form.age</field>

        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml"> 
            <xpath expr="//field[@name='type']" position="after">

<field name="age" />

            </xpath> 
        </field>
    </record>











   
</odoo>


